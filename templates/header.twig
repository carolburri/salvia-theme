<header class="bg-white p-4">
    <div class="container mx-auto flex justify-between items-center">
        <h1>
            <a href="{{ site.url }}" title="{{ site.name }}" alt="{{ site.name }} logo">
                <img class="w-32 h-auto" src="{{ asset('logo.svg') }}" />
            </a>
        </h1>
        <nav class="flex">
            <ul class="flex -mx-4">
                {% for item in menu.get_items %}
                    <li class="mx-4 {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a>
                        {% if item.get_children %}
                            <ul class="nav-drop">
                                {% for child in item.get_children %}
                                    <li class="nav-drop-item"><a href="{{child.get_link}}">{{child.title}}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</header>
