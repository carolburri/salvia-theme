{
	"name": "salvia-theme",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "git@github.com:drdogbot7/salvia-theme.git"
	},
	"licenses": [
		{
			"type": "MIT",
			"url": "http://opensource.org/licenses/MIT"
		}
	],
	"scripts": {
		"start": "wp-scripts start src/index.js src/editor.js & browser-sync start --config bs-config.js",
		"build": "wp-scripts build src/index.js src/editor.js",
		"lint": "eslint --fix src",
		"format": "prettier **/* --write --ignore-unknown",
		"stylelint-check": "stylelint-config-prettier-check"
	},
	"engines": {
		"node": ">= 12.13.0"
	},
	"devDependencies": {
		"@prettier/plugin-php": "^0.18.1",
		"@wordpress/scripts": "^22.0.1",
		"browser-sync": "^2.27.7",
		"cssnano": "^5.1.0",
		"eslint": "^8.9.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.4",
		"postcss-preset-env": "^7.4.2",
		"prettier": "^2.5.1",
		"prettier-plugin-twig-melody": "^0.4.6",
		"sass-loader": "^12.6.0",
		"stylelint": "^14.5.1",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard-scss": "^3.0.0",
		"stylelint-prettier": "^2.0.0"
	},
	"dependencies": {
		"@alpinejs/collapse": "^3.9.0",
		"@alpinejs/focus": "^3.9.0",
		"@tailwindcss/forms": "^0.4.0",
		"@wordpress/eslint-plugin": "^10.0.2",
		"alpinejs": "^3.9.0",
		"tailwindcss": "^3.0",
		"tailwindcss-fluid-type": "^1.3.3",
		"webfontloader": "^1.6.28"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js}": "eslint --fix",
		"*.{css,scss}": "stylelint --fix",
		"**/*": "prettier --write --ignore-unknown"
	}
}
